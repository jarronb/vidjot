{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input class="btn btn-danger btn-block" type="submit" value="Delete"></input>
  </form>
  </div>
{{else}}
  <p>No videos ideas listed</p>
{{/each}}